<% content_for :open_graph_tags do %>
  <%= render OpenGraphTagsComponent.new %>
<% end %>

<div class="text-center px-4 mt-12 sm:mt-24">
  <h1 class="text-3xl tracking-tight font-extrabold text-gray-900 sm:text-4xl md:text-5xl">
    Find Rails developers looking for work
  </h1>

  <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
    railsdevs.io is a place for companies to find Ruby on Rails developers who are looking for freelance, contract, and full-time work.
  </p>
</div>

<div class="mt-16 mx-auto sm:mt-24">
  <ul id="developers" role="list" class="space-y-8 bg-gray-100">
    <%= render @developers %>
  </ul>

  <div class="mt-8">
    <%= pagy_links do %>
      <%== pagy_nav @pagy %>
    <% end %>
  </div>

  <%= turbo_frame_tag "developers-#{@pagy.page}" do %>
    <%= turbo_stream.append "developers" do %>
      <%= render @developers %>
      <% if @pagy.next %>
        <%= turbo_frame_tag "developers-#{@pagy.page + 1}", src: [:developers, page: @pagy.next], loading: :lazy %>
      <% end %>
    <% end %>
    <%= turbo_stream.remove "developers-#{@pagy.page}" %>
  <% end %>

</div>

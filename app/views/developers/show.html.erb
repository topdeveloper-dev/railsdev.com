<% content_for :open_graph_tags do %>
  <%= render DeveloperOpenGraphTagsComponent.new(developer: @developer) %>
<% end %>

<div class="mt-0 lg:mt-16 pb-8 bg-white shadow lg:rounded-lg overflow-hidden">
  <div class="w-full aspect-w-4 aspect-h-1">
    <% if @developer.cover_image.attached? %>
      <%= image_tag @developer.cover_image, class: "w-full h-full object-cover" %>
    <% else %>
      <%= image_tag "default_splash.jpg", class: "w-full h-full object-cover" %>
    <% end %>
  </div>

  <div class="relative z-10 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="-mt-12 sm:-mt-16 sm:flex sm:items-end sm:space-x-5">
      <div class="flex">
        <%= render "developers/avatar", developer: @developer %>
      </div>

      <div class="mt-6 sm:flex-1 sm:min-w-0 sm:flex sm:items-center sm:justify-end sm:space-x-6 sm:pb-1">
        <div class="sm:hidden 2xl:block mt-6 min-w-0 flex-1">
          <h2 class="text-2xl font-bold text-gray-900 truncate">
            <%= @developer.hero %>
          </h2>
        </div>
      </div>
    </div>

    <div class="hidden sm:block 2xl:hidden mt-6 min-w-0 flex-1">
      <h2 class="text-2xl font-bold text-gray-900 truncate">
        <%= @developer.hero %>
      </h2>
    </div>
  </div>

  <div class="mt-8 max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <dl class="max-w-prose grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
      <div class="sm:col-span-1">
        <dt class="text-sm font-medium text-gray-500">
          Availability
        </dt>
        <dd class="flex mt-1 text-sm text-gray-900">
          <%= render AvailabilityComponent.new(developer: @developer) %>
        </dd>
      </div>

      <% if @developer.website.present? %>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">
            Website
          </dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= render ExternalLinkComponent.new(@developer.website, @developer.website, class: "hover:text-gray-600") %>
          </dd>
        </div>
      <% end %>

      <% if @developer.github.present? %>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">
            GitHub
          </dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to "@#{@developer.github}", "https://github.com/#{sanitize @developer.github}", target: "_blank", class: "hover:text-gray-600" %>
          </dd>
        </div>
      <% end %>

      <% if @developer.twitter.present? %>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">
            Twitter
          </dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to "@#{@developer.twitter}", "https://twitter.com/#{sanitize @developer.twitter}", target: "_blank", class: "hover:text-gray-600" %>
          </dd>
        </div>
      <% end %>

      <% if @developer.linkedin.present? %>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">
            LinkedIn
          </dt>
          <dd class="mt-1 text-sm text-gray-900">
            <%= link_to @developer.linkedin , "https://www.linkedin.com/in/#{sanitize @developer.linkedin}/", target: "_blank", class: "hover:text-gray-600" %>
          </dd>
        </div>
      <% end %>

      <div class="sm:col-span-2">
        <dt class="text-sm font-medium text-gray-500">
          Bio
        </dt>
        <dd class="mt-1 text-sm text-gray-900 space-y-5">
          <%= simple_format @developer.bio %>
        </dd>
      </div>
    </dl>
  </div>
</div>

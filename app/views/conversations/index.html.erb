<%= open_graph_tags title: t(".title") %>

<div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <% if @conversations.any? %>
    <% unless turbo_native_app? %>
      <h1 class="mt-6 text-center text-3xl font-extrabold"><%= t(".title") %></h1>
    <% end %>

    <ul class="w-full max-w-xl mx-auto rounded-lg overflow-hidden border border-gray-200 divide-y divide-gray-200 mt-8">
      <%= render @conversations %>
    </ul>
  <% else %>
    <div class="mt-8">
      <%= render "empty_state" %>
    </div>
  <% end %>
</div>

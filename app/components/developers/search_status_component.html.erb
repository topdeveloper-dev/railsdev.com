<div class="flex items-center space-x-2">
  <% if actively_looking? %>
    <%= inline_svg_tag "icons/solid/search_circle.svg", class: "h-5 w-5 text-green-500" %>
  <% elsif open? %>
    <%= inline_svg_tag "icons/solid/search_circle.svg", class: "h-5 w-5 text-gray-500" %>
  <% else %>
    <%= inline_svg_tag "icons/solid/x_circle.svg", class: "h-5 w-5 text-gray-500" %>
  <% end %>

  <%= tag.span class: ["text-sm font-medium", "text-green-700": developer.actively_looking?, "text-gray-900": !developer.actively_looking?] do %>
    <%= humanize developer.search_status %>
  <% end %>
</div>

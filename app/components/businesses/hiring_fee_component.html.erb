<div class="rounded-md bg-blue-50 p-4 mt-8">
  <div class="flex">
    <div class="flex-shrink-0">
      <%= inline_svg_tag "icons/solid/information_circle.svg", class: "h-5 w-5 text-blue-400", aria_hidden: true %>
    </div>
    <div class="ml-3 flex-1 md:flex md:justify-between">
      <p class="text-sm text-blue-700"><%= t(".title", developer: developer) %></p>
      <p class="mt-3 text-sm md:mt-0 md:ml-6">
        <%= mail_to recipient, subject:, body:, class: "whitespace-nowrap font-medium text-blue-700 hover:text-blue-600" do %>
          <%= t(".cta") %> <span aria-hidden="true">&rarr;</span>
        <% end %>
      </p>
    </div>
  </div>
</div>
